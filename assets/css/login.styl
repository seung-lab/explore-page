@import 'mixins.styl'
@import 'buttons.styl'
@import 'parallax.styl'

html, body
    font-family Roboto, 'Lucida Grande', sans-serif
    font-weight 400

    -moz-box-sizing border-box
    box-sizing border-box
    
    width 100%
    height 100%


section.intake
	width 100%
	height 100%
	overflow hidden

section.gateway
	background rgb(1, 19, 34) url("/images/background.jpg") no-repeat center center fixed
	background-size cover

	/* Fix a bug with cover in Android Chrome
	   where it appearently doesn't work on html/body
	   but works in other situations. */
	   
	height 100%
	margin 0
	overflow-x hidden
	overflow-y auto
	padding 0
	width 100%

	display flex
	color white
	align-items center
	justify-content center
	flex-direction column

div.pitch
	position relative
	text-transform uppercase
	
	font-size 30px
	font-weight 100
	letter-spacing 5px

.gateway .logo
	position absolute
	top -150px
	
	width 45px
	center-horizontal()

	transition: top 150ms, left 150ms
	
$corner_offset = 5%

.gateway .logotype
	position absolute
	top $corner_offset
	left $corner_offset
	
	background-image url('/images/logotype.svg') 
	background-size 100px 30px
	background-repeat no-repeat
	width 120px
	height 35px
	
.gateway .share 
	position absolute
	top $corner_offset
	right $corner_offset
	
	width 20px
	height @width
	background-color #F00
	border-radius 100%

.gateway .explorebtn
	width ($primary_width / $PHI)
	center-horizontal()
	bottom 10%

.gateway #continuebtn
	margin-top 40px
	
/* parallax layers */

.intake-front
.intake-middle
.intake-rear
.intake-carpet
.gateway
	width: 5px
	parallax(1px)



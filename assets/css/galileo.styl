@require 'colors.styl'
@require 'mixins.styl'
@require 'amazing.styl'

.galileo
	height 100%
	width 100%
	
	@extend .module-font
	

.galileo .transition
	$height_factor = 3;

	width 100%
	height $height_factor * 100%
	background-image linear-gradient($FILL_WHITE, $FILL_DARKER_BLUE);
	
.galileo .action
	position relative
	
	width 100%
	height 100%
	
	background-color $FILL_DARKER_BLUE

.galileo .story-text
	@extend .amazing .story-text
	
	white-space normal
	
	color $TEXT_BLUE_LIGHT
	width 666px
	height 75px
	center()
	
	white-space nowrap
	
// .galileo .story-text .text.caps
	
.galileo .story-text .text.italics
	font-style italic
	font-family 'Vollkorn', 'Roboto Condensed', 'Lucidia Grande', serif;
	font-weight 400
	font-size 30px
	text-transform none
	letter-spacing 0px

.galileo .story-text-big
	@extend .amazing .story-text

	width 700px
	height 400px

	color $TEXT_BLUE_LIGHT
	center()
	
.big-number.hundred:first-letter
	letter-spacing -35px

.galileo .story-text-big .inner
	display flex
	align-items center
	justify-content center
	flex-direction column
	
	z-index 1
	
	width 100%
	height 200px
	center-vertical()
	
.galileo .inner:after
	content "...."
	font-size 10px
	letter-spacing 1px
	
.galileo .story-text .counter
	bottom -52px
	
.galileo .story-text-big .counter
	bottom -20px
	font-size 6px
	letter-spacing 5px
	
.galileo .story-text-big .high-text
	@extend .galileo .story-text .text.italics
	text-transform lowercase
	font-size 30px
	
.galileo .story-text-big .medium-text
	font-size 85px
	letter-spacing 5px
	line-height 1em
	
.galileo .story-text-big .low-text
	font-size 30px
	letter-spacing 16px
	
.galileo .big-number
	position absolute
	top -25px
	
	z-index 0
	font-size 400px
	font-weight 400
	letter-spacing -15px
	margin-left -1.5%

	color $BIG_NUMBER_BLUE
	
	width 100%
	height 100%
	text-align center
	
	transition top 250ms ease
	transition font-size 250ms ease

.neural-network
	height 100%
	width 100%
	


/*
 *	Media Queries
 */



// ---> Small Screen

/* ----------- Non-Retina Screens ----------- */
@media screen and (min-width: 600px) and (-webkit-min-device-pixel-ratio: 1)
	.galileo .big-number
		top -25px	
		font-size 400px
	
	.galileo .story-text-big .high-text
		font-size 30px


/* ----------- Retina Screens ----------- */
@media screen and (min-width: 600px) and (-webkit-min-device-pixel-ratio: 2) and (min-resolution: 192dpi)
	.galileo .big-number
		top -25px	
		font-size 400px
		
	.galileo .story-text-big .high-text
		font-size 30px



// ---> Medium Screen

/* ----------- Non-Retina Screens ----------- */
@media screen and (min-width: 1000px) and (-webkit-min-device-pixel-ratio: 1)
	.galileo .big-number
		top -85px	
		font-size 500px
	
	.galileo .story-text-big .counter
		bottom -30px


/* ----------- Retina Screens ----------- */
@media screen and (min-width: 1000px) and (-webkit-min-device-pixel-ratio: 2) and (min-resolution: 192dpi)
	.galileo .big-number
		top -85px	
		font-size 500px
		
	.galileo .story-text-big .counter
		bottom -30px
		
		

// ---> Large Screen

/* ----------- Non-Retina Screens ----------- */
@media screen and (min-width: 1500px) and (-webkit-min-device-pixel-ratio: 1)
	.galileo .big-number
		top -135px
		font-size 600px
		
	.galileo .story-text-big .medium-text
		font-size 100px
		
	.galileo .story-text-big .high-text
		font-size 36px
	
	.galileo .story-text-big .low-text
		font-size 36px
		
	.galileo .story-text-big .counter
		bottom -40px
		
	.galileo .story-text .text.italics
		font-size 36px


/* ----------- Retina Screens ----------- */
@media screen and (min-width: 1500px) and (-webkit-min-device-pixel-ratio: 2) and (min-resolution: 192dpi)
	.galileo .big-number
		top -135px	
		font-size 600px
		
	.galileo .story-text-big .medium-text
		font-size 100px
		
	.galileo .story-text-big .high-text
		font-size 36px
		
	.galileo .story-text-big .low-text
		font-size 36px
		
	.galileo .story-text-big .counter
		bottom -40
		
	.galileo .story-text .text.italics
		font-size 36px

	

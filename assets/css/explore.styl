@require 'mixins.styl'
@require 'controls.styl'
@require 'colors.styl'

@require 'amazing.styl'

#explore 
	top 225%

.timeline 
	height 25px
	background-color $FILL_WHITE
	border-top 1px solid $FILL_BLUE
	width 100%
	
.timeline .progress
	background-color $FILL_BLUE
	height 100%
	transition width 500ms cubic-bezier(0.55, 0.06, 0.68, 0.19)
	

.bg-light 
	background-color $FILL_WHITE


.bg-dark 
	background-color $FILL_BLUE

.column 
	display flex
	flex-direction column
	
.column:first-child
	flex 1

.fullscreen
	width 100%
	height 100%
	
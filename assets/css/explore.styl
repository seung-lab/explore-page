@import 'mixins.styl'

html, body
    font-family Roboto, 'Lucida Grande', sans-serif
    font-weight 400

    -moz-box-sizing border-box
    box-sizing border-box
    
    width 100%
    height 100%

div.eyewire
	background-image url("/images/registration-sprite.png")
	width 100px
	
	background-position 0px 0px


section.container
	width 100%
	height 100%
	
	padding 10px

section.container.gateway
	background black url("/images/background.jpg") no-repeat center center fixed
	-webkit-background-size cover
	-moz-background-size cover
	-o-background-size cover
	background-size cover

	/* Fix a bug with cover in Android Chrome
	   where it appearently doesn't work on html/body
	   but works in other situations. */
	   
	height 100%
	margin 0
	overflow-x hidden
	overflow-y auto
	padding 0
	width 100%

	display flex
	color #FFF
	align-items center
	justify-content center
	flex-direction column

div.pitch
	position relative
	text-transform uppercase
	
	font-size: 30px;
	font-weight: 300;
	letter-spacing: 5px;

.gateway .logo
	position absolute
	top 10%
	
	width 45px
	center-horizontal()

	transition: top 150ms, left 150ms
	
.gateway .logotype
	position absolute
	top 10%
	left 5%
	
	background-size: 100px 30px;
	background-position: 0px 0px;
	width: 120px;
	height: 35px;
	background-color: #F00;
	
	// background-image url("/images/registration-sprite.png")
	// background-size 100px 30px
	// background-position 0px 0px

.gateway .share 
	position absolute
	top 10%
	right 5%
	
	width 35px
	height @width
	background-color #F00
	border-radius 100%

.gateway .explorebtn
	center-horizontal()
	bottom 10%

.gateway #continuebtn
	margin-top 30px



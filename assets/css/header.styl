.header
	position fixed
	top 0
	left 0
	
	width 100%
	height 100%
	
	z-index 100
	pointer-events none
	
.header div
	pointer-events auto
	transition opacity 150ms
	
.header.invisible div
	opacity 0

$corner_offset = 5%

.header .logotype
	position absolute
	top $corner_offset
	left $corner_offset
	
	background-image url('/images/logotype.svg') 
	background-size 100px 30px
	background-repeat no-repeat
	width 120px
	height 35px
	
.header .share
	position absolute
	top $corner_offset
	right $corner_offset
	
	height 30px
	width @height
	
	background-image url('/images/icons/sh.svg') // ad-blocks sometimes block share.svg
	background-size @height @height
	background-repeat no-repeat
	
	opacity .3





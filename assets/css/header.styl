@require 'colors.styl'

.header
	position fixed
	top 0
	left 0
	
	width 100%
	height 1px
	
	z-index 100
	pointer-events none
	
.header div
	pointer-events auto
	transition opacity 2s
	
.header.invisible div,
.header.invisible div.visible
	opacity 0

$corner_offset = 35px

.header .logotype
	position absolute
	top $corner_offset
	left $corner_offset
	
	background-image url('/images/logotype.svg') 
	background-size 150px
	background-repeat no-repeat
	width 150px
	height 35px
	
.header .share,
.header .login,
.header .register
	position absolute
	top $corner_offset
	right $corner_offset
	
	opacity 0
	pointer-events none
	cursor pointer
	
.header div.visible
	pointer-events all

.header .share
	height 30px
	width 300px
	
	right (-@width + $corner_offset + @height)
	
	transition right 1s ease-in-out
	
.header .share.activated
	right 0px
	
.header .share .permalink
	display inline-block
	color $TEXT_BLUE
	opacity 0
	
	float left
	margin-top 5px
	margin-left 10px
	font-size 16px
	
	cursor text

.header .share.activated .permalink
	opacity 1

.header .share .before
	display block
	height 30px
	width @height
	
	float left
	
	background-image url('/images/icons/sh-dark.svg') // ad-blocks sometimes block share.svg
	background-size @height @height
	background-repeat no-repeat

.header .login,
.header .register
	height 30px
	width 150px
	
	color $TEXT_BLUE_LIGHT
	border-top-left-radius 0px
	border-bottom-left-radius 0px
	
.header .login.visible,
.header .register.visible 
	opacity 1
	
.header .login.visible:before,
.header .register.visible:before
	opacity 1

.header .share.visible
	opacity 1

.header .tertiary
	color $TEXT_BLUE

.header .tertiary:before
	background url("/images/icons/enter.svg")
	background-size 65%
	background-repeat no-repeat
	background-position 5px 6px
	
	top: -0.5px;
	left: -31px;

.header .register
	border 1px solid $TEXT_BLUE
	border-radius 10px
	
.header .register .icon
	float left
	width 50px 
	height 100%
	background url("/images/icons/create-account-dark.svg")
	background-size 65%
	background-repeat no-repeat
	background-position 5px 6px
	
	border-right 1px solid $TEXT_BLUE
	
	
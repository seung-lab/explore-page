@require 'colors.styl'
@require 'mixins.styl'
@require 'amazing.styl'

.wonderers
	@extend .module-font

$WONDERERS_ASPECT_RATIO = 1.333;

.wonderers img
	height 750px
	width @height * $WONDERERS_ASPECT_RATIO // aspect ratio of this image
	center(0px, -50px)
	
	transition width 250ms ease
	transition height 250ms ease
	transition left 250ms ease
	transition top 250ms ease
	
.wonderers .story-text
	@extend .amazing .story-text
	
	opacity: 1
	white-space normal
	
.wonderers .super-text
	@extend .amazing .super-text
	
	
.wonderers .story-text:before
	display none
	
/*
 *	Media Queries
 */

@media screen and (max-height: 900px) and (min-resolution: 2dppx) and (min-resolution: 192dpi), screen and (max-width: 950px) and (min-resolution: 2dppx) and (min-resolution: 192dpi)
	.wonderers img
		height 500px
		width @height * $WONDERERS_ASPECT_RATIO
		
		center(0px, -50px)


/* ----------- Retina Screens ----------- */
@media screen and (min-width: 400px), (min-height: 400px) and (min-resolution: 2dppx) and (min-resolution: 192dpi)
	.wonderers img
		height 300px
		width @height * 1.333 // aspect ratio of this image
		
		center(0px, -50px)
		
	.wonderers .super-text
		font-size 22px
		top -35px
	
	.wonderers .story-text
		font-size 28px
		bottom 18%

		
@media screen and (max-height: 600px) and (min-resolution: 2dppx) and (min-resolution: 192dpi), screen and (max-width: 650px) and (min-resolution: 2dppx) and (min-resolution: 192dpi)
	.wonderers img
		height 300px
		width @height * $WONDERERS_ASPECT_RATIO
		
		center(0px, -50px)
		
	.wonderers .super-text
		font-size 18px
		top -35px
	
	.wonderers .story-text
		font-size 24px
		bottom 20%


@media screen and (min-width: 600px) and (min-height: 550px) and (min-resolution: 1dppx) and (min-resolution: 96dpi)
	.wonderers img
		height 450px
		width @height * $WONDERERS_ASPECT_RATIO
		
		center(0px, -50px)
		
	.wonderers .super-text
		font-size 24px
		top -35px
	
	.wonderers .story-text
		font-size 30px
		bottom 20%
		
@media screen and (min-width: 800px) and (min-height: 800px) and (min-resolution: 1dppx) and (min-resolution: 96dpi)
	.wonderers img
		height 600px
		width @height * $WONDERERS_ASPECT_RATIO
		
		center(0px, -50px)
		
	.wonderers .super-text
		font-size 28px
		top -35px
	
	.wonderers .story-text
		font-size 34px
		bottom 15%



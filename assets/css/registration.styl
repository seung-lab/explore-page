@require 'mixins.styl'
@require 'controls.styl'
@require 'colors.styl'
@require 'parallax.styl'

#registration 
	top: 225%

.registration
	width 500px
	height 500px
	
	center()
	
	margin-bottom 100vh

.registration .icon
	background-repeat no-repeat
	background-size 15px
	background-position 10px


.registration .username 
	@extend .registration .icon
	background-image url("/images/icons/username.svg")

.registration .email 
	@extend .registration .icon
	background-image url("/images/icons/email.svg")
	
.registration .password
	@extend .registration .icon
	background-image url("/images/icons/password.svg")

.registration .logo 
	width 150px
	height @width

.registration button,
.registration input
	width 150px
	

.registration .location-text
	text-transform uppercase
	color $TEXT_BLUE
	font-size 11px
	font-weight 600
	letter-spacing 1.5px

.fb-connect
	position relative
	
	padding-left 5%
	box-sizing border-box

.fb-connect::before
	content ""
	height $primary_height
	width 25%

	background-image url("/images/icons/fb.svg")
	background-repeat no-repeat
	background-position 10px 3px
	background-size 20px

	position absolute
	left 0px
	top -1px

	border-right 1px solid $TEXT_BLUE
	border-top-left-radius 15px
	border-bottom-left-radius 15px

	box-sizing border-box




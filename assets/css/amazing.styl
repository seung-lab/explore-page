@require 'colors.styl'
@require 'mixins.styl'

.module-font 
	font-family 'Roboto Condensed', 'Lucidia Grande', sans-serif
	font-weight 700

.amazing
	height 100%
	width 100%
	
	@extend .module-font
	
	display flex
	flex-direction column
	align-items center
	justify-content center
	
.amazing .animation
	height 100%
	z-index 0

$amazing_z = 1

.amazing .gif
	height 100%
	
.amazing .invisible
	opacity 0

.amazing .story-text
	text-transform uppercase
	color $TEXT_BLUE
	font-size 42px
	font-weight 700
	word-spacing 0px
	letter-spacing 2px
	line-height 1.25em
	text-align center
	white-space nowrap
	
	width 666px
	height auto

	position absolute
	bottom 15%
	
	z-index $amazing_z

	center-horizontal()
	
	transition opacity 1000ms ease
	
.super-text
	font-family 'Vollkorn', 'Roboto Condensed', 'Lucidia Grande', serif;
	font-weight 400
	color $TEXT_BLUE
	
	position absolute
	top -50px
	text-align center
	font-style italic
	text-transform lowercase
	letter-spacing 0px
	font-size 36px
	
	width 100%
	center-horizontal()

	z-index $amazing_z


.counter 
	display flex
	justify-content center
	align-items center
	flex-direction column
	
	background-color $ACCENT_YELLOW
	color $TEXT_BLUE
	border-radius 9px
	
	box-sizing border-box
	padding-left 5px
	
	width 50px
	height 20px
	
	font-size 6px
	letter-spacing 5px
	
	position absolute
	bottom -30px
	center-horizontal()
	
	z-index $amazing_z


.amazing .frame
	position absolute
	left -9999px
	right -9999px
	top -9999px
	bottom -9999px
	margin auto
	visibility hidden
	height 75%
	

/*
 *	Media Queries
 */
 


// ---> Small Screen

/* ----------- Non-Retina Screens ----------- */
@media screen and (min-width: 400px) and (min-resolution: 1dppx)
	
	.amazing .super-text
		top -25px
		font-size 18px
	
		center-horizontal()
		
	.amazing .story-text
		font-size 24px
		width 350px
		
		center-horizontal()



/* ----------- Retina Screens ----------- */
@media screen and (min-width: 400px) and (min-resolution: 2dppx)

	.amazing .super-text
		top -25px
		font-size 18px
	
		center-horizontal()
		
	.amazing .story-text
		font-size 24px
		width 350px
		
		center-horizontal()




// ---> Medium Screen

/* ----------- Non-Retina Screens ----------- */
@media screen and (min-width: 750px) and (min-resolution: 1dppx)
	
	.amazing .super-text
		top -35px
		font-size 24px
	
		center-horizontal()
		
	.amazing .story-text
		font-size 30px
		width 444px
		
		center-horizontal()



/* ----------- Retina Screens ----------- */
@media screen and (min-width: 750px) and (min-resolution: 2dppx)

	.amazing .super-text
		top -35px
		font-size 24px
	
		center-horizontal()
		
	.amazing .story-text
		font-size 30px
		width 444px
		
		center-horizontal()




// ---> Large Screen

/* ----------- Non-Retina Screens ----------- */
@media screen and (min-width: 1500px) and (min-resolution: 1dppx)

	.amazing .super-text
		top -50px
		font-size 36px
	
		center-horizontal()
		
	.amazing .story-text
		font-size 36px
		width 600px
		
		center-horizontal()



/* ----------- Retina Screens ----------- */
@media screen and (min-width: 1500px) and (min-resolution: 2dppx)

	.amazing .super-text
		top -50px
		font-size 36px
	
		center-horizontal()
		
	.amazing .story-text
		font-size 36px
		width 600px
		
		center-horizontal()
		

/*
 *	Set to hit an iPhone 6+
 */

@media only screen and (max-device-width: 414px) and (min-resolution: 2dppx)
		
		.counter 
			display none

		.amazing .story-text	
			font-size 36px
			width 375px
			bottom 15%
			white-space normal
			center-horizontal()
			
		.amazing .super-text
			top -42px
			font-size 30px
			
/*
 *	Set to hit an iPhone 6
 */
			
@media only screen and (max-device-width: 375px) and (min-resolution: 2dppx)
			
		.amazing .story-text
			font-size 30px
			width 325px
			white-space normal
			center-horizontal()
			
		.amazing .super-text
			font-size 24px
			top -35px
			
/*
 *	Set to hit an iPhone 5 + 4
 */
			
@media only screen and (max-device-width: 320px) and (min-resolution: 2dppx)
			
		.amazing .story-text
			font-size 24px
			width 275px
			white-space normal
			center-horizontal()
			
		.amazing .super-text
			font-size 18px
			top -25px
			












